<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiexiaobo.www.day01xutils.HttpActivity">

    <TextView
        android:gravity="center"
        android:text="Xutils的Http部分"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_http_get"
        android:onClick="onClick"
        android:text="点击发送get请求"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_http_post"
        android:onClick="onClick"
        android:text="点击发送post请求"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="onClick"
        android:text="点击上传文件"
        android:id="@+id/bt_http_post_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
